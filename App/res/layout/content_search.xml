<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_search"
    tools:context="com.apps.sanjeeviraj.bookfiletracking.SearchActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="scanQR"
        android:text=" QR Code "
        android:textSize="20dp"
        android:id="@+id/scanner"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/scanner2"
        android:layout_alignEnd="@+id/scanner2">
    </Button>

    <Button
        android:id="@+id/scanner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="scanBar"
        android:text="Bar Code"
        android:textSize="20dp"
        android:layout_below="@id/scanner"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bookid_function"
        android:text="  Book ID  "
        android:textSize="20dp"
        android:id="@+id/button7"
        android:layout_below="@+id/scanner2"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/scanner2"
        android:layout_alignStart="@+id/scanner2" />


</RelativeLayout>
